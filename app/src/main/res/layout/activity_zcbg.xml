<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <gordenyou.huadian.view.HeaderTitle
        android:id="@+id/zcbg_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:headerbuttonname="确认变更"
        app:headertitle="资产变更" />

    <gordenyou.huadian.view.ScannerView
        android:id="@+id/zcbg_tiaoma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:buttonvisable="false"
        app:scannerbuttonname="扫描"
        app:scannerhint="请扫描条码/读取RFID"
        app:scannertitle="资产编码" />

    <gordenyou.huadian.view.TextshowView
        android:id="@+id/zcbg_EPC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textshowtitle="E     P    C" />

    <gordenyou.huadian.view.TextshowView
        android:id="@+id/zcbg_mingchen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textshowtitle="资产名称" />

    <!--<gordenyou.huadian.view.TextshowView-->
    <!--android:id="@+id/zcbg_ping"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--app:textshowtitle="资产品牌" />-->

    <gordenyou.huadian.view.TextshowView
        android:id="@+id/zcbg_leixing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textshowtitle="资产类型" />

    <gordenyou.huadian.view.TextshowView
        android:id="@+id/zcbg_bianma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textshowtitle="出厂编码" />

    <gordenyou.huadian.view.TextshowView
        android:id="@+id/zcbg_beizhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textshowtitle="资产备注" />

    <gordenyou.huadian.view.TextshowView
        android:id="@+id/zcbg_bumen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textshowtitle="所属部门" />

    <gordenyou.huadian.view.TextshowView
        android:id="@+id/zcbg_quyu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:textshowtitle="所在区域" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <gordenyou.huadian.view.TextshowView
            android:id="@+id/zcbg_zerenren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textshowtitle="责  任  人" />

        <gordenyou.huadian.view.TextshowView
            android:id="@+id/zcbg_shiyongren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            app:textshowtitle="使  用  人" />
    </LinearLayout>

    <!--<gordenyou.huadian.view.EdittextView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_marginBottom="3dp"-->
    <!--app:edittexthint="请输入新的品牌"-->
    <!--app:edittexttitle="更改品牌" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <gordenyou.huadian.view.EdittextView
            android:id="@+id/zcbg_newzerenren"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:edittexthint="请输入新的责任人"
            app:edittexttitle="新责任人" />

        <gordenyou.huadian.view.EdittextView
            android:id="@+id/zcbg_newshiyongren"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="12dp"
            app:edittexthint="请输入新的使用人"
            app:edittexttitle="新使用人" />
    </LinearLayout>

    <gordenyou.huadian.view.EdittextView
        android:id="@+id/zcbg_newbianma"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:edittexthint="请输入新的出厂编码"
        app:edittexttitle="更改编码" />

    <gordenyou.huadian.view.EdittextView
        android:id="@+id/zcbg_newbeizhu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:edittexthint="请输入新的备注"
        app:edittexttitle="更改备注" />

    <gordenyou.huadian.view.EdittextView
        android:id="@+id/zcbg_newfangjian"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:edittexthint="请输入新的房间"
        app:edittexttitle="更改房间" />

    <gordenyou.huadian.view.EdittextView
        android:id="@+id/zcbg_newquyu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        app:edittexthint="请输入新的区域"
        app:edittexttitle="更改区域" />

