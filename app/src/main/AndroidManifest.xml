<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="gordenyou.huadian" >

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name="gordenyou.huadian.activity.LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="gordenyou.huadian.activity.HomeActivity"/>
        <activity android:name="gordenyou.huadian.activity.SystemActivity"/>

        <activity android:name=".activity.Activity_KCCX"/>
        <activity android:name=".activity.Activity_RFID"/>
        <activity android:name=".activity.Activity_ZCBG"/>
        <activity android:name=".activity.Activity_ZCJY"/>
        <activity android:name=".activity.Activity_ZCGH"/>
        <activity android:name=".activity.Activity_ZCPD"/>
        <activity android:name=".activity.Activity_SYNC"/>
    </application>

</manifest>